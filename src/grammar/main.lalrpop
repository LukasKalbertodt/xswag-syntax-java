// Type modifier is a merge of "InterfaceModifier" and "ClassModifier"
ModifierImpl = {
    "public",
    "protected",
    "private",
    "abstract",
    "static",
    "final",
    "strictfp",
};
Modifier: Keyword = {
    ModifierImpl => if let Token::KeyW(kw) = <> { kw } else { unreachable!() }
};

Ident: ast::Ident = {
    <l:@L> <w:Word> <r:@R>  => ast::Ident {
        name: w,
        span: Span::new(l, r),
     }
};

#[inline]
Path: ast::Path = {
    <head: Ident> <tail: ("." <Ident>)*> => {
        let mut v = vec![head];
        v.extend_from_slice(&tail);
        ast::Path {
            segments: v,
        }
    }
};


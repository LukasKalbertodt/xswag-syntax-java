// ===========================================================================
// Definition of helper productions and macros
// ===========================================================================
Comma<T>: Vec<T> = {
    <head: T> <tail: ("," <T>)*> => {
        let mut v = vec![head];
        v.extend_from_slice(&tail);
        v
    }
};

#[inline]
Spanned<T>: (T, Span) = {
    <l:@L> <t:T> <r:@R> => (t, Span::new(l, r)),
};



// 4.3 ANNO
Dims: u16 = {
    <l:@L> <dims: ("[" "]")+> <r:@R> =>? {
        if dims.len() > u16::max_value() as usize {
            Err(ParseError::User {
                error: Report::simple_error(
                    format!("too many dimensions! Do you really need a {} \
                        dimensional array?", dims.len()),
                    Span::new(l, r),
                )
            })
        } else {
            Ok(dims.len() as u16)
        }
    } ,
};
